---
import '@fontsource-variable/inter'
import Footer from '@/components/footer.astro'
import Navbar from '@/components/navbar.astro'
import { checkImageUrl } from '@/utils/all'
import { SEO } from 'astro-seo'
import SlideNav from '@/components/slideNav.astro'
export interface Props {
	title?: string
	desc?: string
	ogimage?: string
	author?: string
	publishDate?: string
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString()

const {
	title,
	desc,
	ogimage = '/assets/blog/blackhole.jpg',
	author,
	publishDate,
} = Astro.props

const resolvedOGImage = checkImageUrl(ogimage, Astro.site)

const makeTitle = title ? `${title} | 懶播` : '懶播'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<SEO
			title={makeTitle}
			description={desc || '懶播 - 你的播客摘要平台'}
			canonical={canonicalURL}
			openGraph={{
				basic: {
					url: canonicalURL,
					type: 'website',
					title: makeTitle,
					image: resolvedOGImage,
				},
				image: {
					alt: makeTitle,
				},
			}}
		>
			{
				publishDate && author && (
					<script
						type="application/ld+json"
						slot="structured-data"
						set:html={JSON.stringify({
							'@context': 'https://schema.org',
							'@type': 'Article',
							mainEntityOfPage: {
								'@type': 'WebPage',
								'@id': canonicalURL,
							},
							headline: title,
							image: resolvedOGImage,
							datePublished: publishDate,
							author: {
								'@type': 'Person',
								name: author,
							},
							publisher: {
								'@type': 'Organization',
								name: '懶播',
								logo: {
									'@type': 'ImageObject',
									url: new URL('/favicon.svg', Astro.site).toString(),
								},
							},
							description: desc,
						})}
					/>
				)
			}
		</SEO>
	</head>
	<body>
		<Navbar />
		<SlideNav />
		<slot />
		<Footer />
		<style is:global>
			/* Improve Page speed */
			/* https://css-tricks.com/almanac/properties/c/content-visibility/ */
			img {
				content-visibility: auto;
			}
		</style>
	</body>
</html>
